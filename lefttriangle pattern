public class LeftTrianglePattern  
{    
public static void main(String args[])   
{     
int i, j, row = 5;      
//Outer loop work for rows  
for (i=0; i<row; i++)   
{  
//inner loop work for space      
for (j=2*(row-i); j>=0; j--)         
{        
System.out.print(" ");   
}    
for (j=0; j<=i; j++ )   
{   
System.out.print("* ");   
}   
System.out.println();   
}   
}   
}
